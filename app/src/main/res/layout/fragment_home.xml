<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenController.Home"
    android:orientation="vertical">


    <TextView
        android:id="@+id/welcomeHomeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="25dp"
        android:textStyle="bold"
        style="@android:style/TextAppearance.Large"/>

    <TextView
        android:id="@+id/currentDateLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current date: " />

    <TextView
        android:id="@+id/currentDateOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxxx-xx-xx" />

    <TextView
        android:id="@+id/topMovieLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Top movies (Name/ Release date/ Rating):" />

    <ListView
        android:id="@+id/topMovieListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/moviememoirhome" />

</LinearLayout>
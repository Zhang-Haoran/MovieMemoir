<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenController.AddToMemoir"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/addToMemoirScreenLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to memoir"
                android:textSize="25dp"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/addToMemoirImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/addToMemoirMovieNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Movie name: " />

            <TextView
                android:id="@+id/addToMemoirMovieNameOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addToMemoirReleaseDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Release date: " />

            <TextView
                android:id="@+id/addToMemoirReleaseDateOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addToMemoirWatchDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Watch date: " />

            <TextView
                android:id="@+id/addToMemoirWatchDateOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/watchDatepickerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add watch date" />

            <TextView
                android:id="@+id/addToMemoirWatchTImeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Watch time: " />

            <TextView
                android:id="@+id/addToMemoirWatchTimeOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/watchTimepickerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add watch time" />

            <TextView
                android:id="@+id/addToMeoirCinemaLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Cinema: " />

            <Spinner
                android:id="@+id/cinemaSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/addCinemaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add cinema" />

            <TextView
                android:id="@+id/addToMemoirCommentLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Comment: " />

            <EditText
                android:id="@+id/addToMemoirCommentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/addToMemoirRatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Rating: " />

            <RatingBar
                android:id="@+id/addToMemoirRatingOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/addToMemoirConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm adding memoir" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>